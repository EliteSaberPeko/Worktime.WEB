@model SearchListViewModel
@{
    ViewData["Title"] = "Список задач";
}

<partial name="SearchFormPartial" />

<div class="tasks__container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th colspan="2" class="tasks__title">Задачи</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var task in Model.Tasks)
            {
                <tr class="table__link" data-task="@task.Name">
                    <td class="tasks__title">@task.Name</td>
                    <td class="tasks__name">@task.Description</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script type="text/javascript">
        RedirectToTaskEvent();
        SearchFormEvent();
    </script>
}